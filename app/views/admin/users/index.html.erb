<h2><i class='icon-book'> </i>Users</h2>
<hr />
<%= will_paginate @users %>
<table class="table table-bordered table-stripped">
  <tr>
    <th>#</th>
    <th>Fullname</th>
    <th>Email</th>
    <th>Group</th>
    <th>Provider</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.fullname %></td>
      <td><%= user.email %></td>
      <td><%= user.group.name %></td>
      <td><%= user.provider %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
    </tr>
  <% end %>
</table>

