<h2><i class="icon-play-circle"> </i>New part</h2>
<hr />

<%= form_tag({:controller => "parts", :action => "confirm"}, :method => "post", :multipart => true) do %>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#ncbi" data-toggle="tab">NCBI</a></li>
    <li><a href="#genome" data-toggle="tab">Genome</a></li>
    <li><a href="#file" data-toggle="tab">Fasta File</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="ncbi">
      <table>
        <tr>
          <td colspan='2'><b>Input Protein/Nucleotide Accession Number:</b></td>
        </tr>
        <tr>
          <td><%= text_area_tag(:accession, "", :size => "50x10")%></td>
          <td>One id per line<br />e.g.<br />NP_058651.3<br />YP_491843.1<br />P29929.1</td>
        </tr>
      </table>
    </div>

    <div class="tab-pane" id="genome">
      <p><b>Organism </b> <%= select_tag(:organism, options_for_select(@organisms), :include_blank => true) %></p>
      <p><b>Chromosome </b> <%= select_tag(:chromosome, options_from_collection_for_select(@chromosomes, :id, :name), :include_blank => true) %></p>
      <p><b>Features </b> <%= select_tag(:feature, options_for_select(@features), :include_blank => true) %></p>
      <p><b>Strand </b> <%= select_tag(:strand, options_for_select(['+', '-', '+/-']), :include_blank => true)%>
      <p><b>Start Position </b> <%= text_field_tag(:start) %> <b>End Position</b> <%= text_field_tag(:end) %></p>
    </div>

    <div class="tab-pane" id="file">
      <p><b>Upload a Fasta File of Protein Sequences (only .fasta and .txt allowed):</b></p>
      <%= file_field_tag(:sequence_file)%>
      <br /><br />
      <p class="text-error">Important: The description line must use the following format:</p>
      <p><b>></b> part_name <b>|</b> part_type <b>|</b> accession_number <b>|</b> organism(optional)<b> | </b>comments(optional)</p> 
      <p>Only one description line is allowed for one sequence</p>
      <p> Check more details and examples: <%= link_to 'description', {:action => :get_description_file} %></p>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag("Create Parts", :class => "btn btn-primary") %>
  </div>
<% end %>


