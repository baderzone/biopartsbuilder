<h2><i class='icon-book'> </i>Converted Files</h2>
<hr />
<%= will_paginate @files %>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>File</th>
      <th>Created_at</th>
    </tr>
  </thead>
  <tbody>
    <% cnt = 0 %>
    <% @files.each do |f| %>
      <% cnt += 1 %>
      <tr>
        <td><%= cnt %></td>
        <td><%= f.name %></td>
        <td><%= link_to "Download", {:action => :get_zip_file, :id => f.id} %></td>
        <td><%= l f.created_at.in_time_zone('EST') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='form-actions'>
  <%= link_to 'Convert File', new_file_convert_path, :class => 'btn btn-primary' %>
</div>
<br />
